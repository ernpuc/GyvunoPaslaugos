@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<link rel="stylesheet" href="~/css/register.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<div class="register-page">
    <!-- Back Arrow -->
    <a href="javascript:history.back()" class="back-arrow">
        <i class="fa-solid fa-arrow-left"></i> Back
    </a>

    <!-- Welcome Section -->
    <div class="register-welcome">
        <h1 class="register-logo-title">FluffFix</h1>
        <p class="register-welcome-text">
            Join us! Create an account to join our website and add your service providers.
        </p>
    </div>

    <!-- Register Form Section -->
    <div class="register-form-container">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="register-form">
            <h2 class="register-heading">Register</h2>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="register-input-group">
                <span class="register-icon"><i class="fa-solid fa-envelope"></i></span>
                <input asp-for="Input.Email" class="register-input" placeholder="Email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="register-input-group">
                <span class="register-icon"><i class="fa-solid fa-user"></i></span>
                <input asp-for="Input.FirstName" class="register-input" placeholder="First Name" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <div class="register-input-group">
                <span class="register-icon"><i class="fa-solid fa-user"></i></span>
                <input asp-for="Input.LastName" class="register-input" placeholder="Last Name" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="register-input-group">
                <span class="register-icon"><i class="fa-solid fa-lock"></i></span>
                <input asp-for="Input.Password" class="register-input" placeholder="Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="register-input-group">
                <span class="register-icon"><i class="fa-solid fa-lock"></i></span>
                <input asp-for="Input.ConfirmPassword" class="register-input" placeholder="Confirm Password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="register-btn">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
