<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FluffFix</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/css/header_footer.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMMlb8HI5NniugY+ZbsU5Cm3yMtr42zoxBf7VtL" crossorigin="anonymous" />
</head>
<body>
    <div class="container">
        <header class="d-flex justify-content-between align-items-center my-4">
            <h1 class="website_name">FluffFix</h1>
            <div>
                @if (SignInManager.IsSignedIn(User))
                {
                    <a href="@Url.Action("Manage", "Account")" class="btn btn-link">Profile</a>
                }
                else
                {
                    <a href="@Url.Action("Login", "Login")" class="btn btn-link">Login</a>
                }
            </div>
        </header>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <p>About us</p>
        <p>Made by: Gabrielė Skirmantaitė & Ernestas Pučinskas</p>
        <p>2024</p>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
